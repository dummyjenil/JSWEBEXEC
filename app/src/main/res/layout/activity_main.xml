<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editurl"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Url"
            android:textColor="#03A9F4"
            android:textColorHint="#607D8B"
            android:textSize="12sp"
            tools:ignore="Autofill,HardcodedText,TextFields" />
        <Button
            android:id="@+id/urlsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="submit"
            android:textSize="12sp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editjs"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="js code"
            android:importantForAutofill="no"
            android:textColor="#2196F3"
            android:textColorHint="#607D8B"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TextFields" />
        <Button
            android:id="@+id/jssubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="submit"
            android:textSize="12sp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <Switch
        android:id="@+id/desktopmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="46dp"
        android:layout_y="14dp"
        android:text="Desktop Mode"
        android:checked="false"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UseSwitchCompatOrMaterialXml" />
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </WebView>
</LinearLayout>
